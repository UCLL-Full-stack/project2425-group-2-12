{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "typeRoots": ["./node_modules/@types"],
        "types": ["node", "express"]
    },
    "include": [
        "middleware/**/*.ts",
        "controller/**/*.ts",
        "service/**/*.ts",
        "repository/**/*.ts",
        "model/**/*.ts",
        "util/**/*.ts",
        "app.ts"
    ]
}
